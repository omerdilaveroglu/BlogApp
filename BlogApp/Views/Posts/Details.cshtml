@model Post

<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb4">
                @Model.Title
            </h1>
            <div class="tags">
                @foreach(var tag in Model.Tags){
                <a href="/posts/tag/@tag.Url"
                    class="badge bg-@tag.Color bg-opacity-10 text-@tag.Color mb-2 fw-bold">@tag.Text</a>
                }
            </div>
        </div>
        <img src="~/img/@Model.Image" class="img-fluid rounded" alt="">
        <div>
            @Model.Content
        </div>
        <div class="bg-white mt-3">
            <div class="card border-0">
                <div class="card header ">
                    <h5>@Model.Comments.Count() Adet yorum.</h5>
                </div>
                <div class="card-body">
                    @foreach(var comment in Model.Comments)
                    {
                    <div class="my-4 d-flex">
                        <img src="/img/@comment.User.Image" alt="" class="avatar rounded-circle float-start me-3">
                        <div>
                        <div class="mb-2 d-flex">
                            <h6 class="me-2">@comment.User.UserName </h6>
                            <small>@comment.PublishedOn.ToString("d")</small>
                        </div>
                        <p>@comment.CommentText</p>
                        </div>

                    </div>
                    }
                    <div class="p-4 p-md-5 my-4 border rounded-3 bg-light shadow-lg">

                        <h4 class="mb-4 text-center text-secondary">
                            <i class="bi bi-chat-text-fill me-2"></i> Yorum Ekle
                        </h4>
                        <hr class="mb-4">

                        <form action="/posts/AddComment" method="post">

                            <input type="hidden" name="PostId" value="@Model.PostId" />
                            <input type="hidden" name="Url" id="url" value="@Model.Url">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="UserName" name="UserName"
                                    placeholder="Adınız" required>
                                <label for="UserName">Kullanıcı Adınız</label>
                            </div>

                            <div class="form-floating mb-4">
                                <textarea class="form-control" id="CommentText" name="CommentText"
                                    placeholder="Yorumunuzu buraya yazın..." style="height: 150px" required></textarea>
                                <label for="CommentText">Yorumunuz</label>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="bi bi-send-fill me-2"></i> Yorumu Gönder
                                </button>
                            </div>

                            <p class="mt-3 text-center text-muted small">
                                Yorumunuz yayınlanmadan önce onaylanabilir.
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">

        <vc:tags-menu></vc:tags-menu>
        <vc:new-posts></vc:new-posts>

    </div>
</div>

<h1>

</h1>