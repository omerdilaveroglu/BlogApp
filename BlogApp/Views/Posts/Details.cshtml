@model Post

<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb4">
                @Model.Title
                <div class="tags">
                    @foreach(var tag in Model.Tags){
                    <a href="/posts/tag/@tag.Url"
                        class="badge bg-@tag.Color bg-opacity-10 text-@tag.Color mb-2 fw-bold">@tag.Text</a>
                    }
                </div>
        </div>
        <img src="~/img/@Model.Image" class="img-fluid rounded" alt="">
        <div>
            @Model.Content
        </div>
        <div class="bg-white mt-3">
            <div class="card border-0">
                <div class="card header ">
                    <h5><span id="commentCount"> @Model.Comments.Count() Adet yorum.</span></h5>
                </div>
                <div class="card-body">
                    <div id="comments">
                        @foreach(var comment in Model.Comments)
                        {
                        <div class="my-4 d-flex">
                            <img src="/img/@comment.User.Image" alt="" class="avatar rounded-circle float-start me-3">
                            <div>
                                <div class="mb-2 d-flex">
                                    <h6 class="me-2">@comment.User.UserName </h6>
                                    <small>@comment.PublishedOn.ToString("d")</small>
                                </div>
                                <p>@comment.CommentText</p>
                            </div>
                        </div>
                        }
                    </div>

                    <div class="p-4 p-md-5 my-4 border rounded-3 bg-light shadow-lg">
                        <h4 class="mb-4 text-center text-secondary">
                            <i class="bi bi-chat-text-fill me-2"></i> Yorum Ekle
                        </h4>

                        @if (User.Identity!.IsAuthenticated){
                        <hr class="mb-4">

                        <form action="/posts/AddComment" method="post">
                            <input type="hidden" id="PostId" name="PostId" value="@Model.PostId" />

                            <div class="form-floating mb-4">
                                <textarea class="form-control" id="CommentText" name="CommentText"
                                    placeholder="Yorumunuzu buraya yazın..." style="height: 150px" required></textarea>
                                <label for="CommentText">Yorumunuz</label>
                            </div>

                            <div class="d-grid gap-2">
                                <button id="commentSave" type="submit" class="btn btn-success btn-lg">
                                    <i class="bi bi-send-fill me-2"></i> Yorumu Gönder
                                </button>
                            </div>

                            <p class="mt-3 text-center text-muted small">
                                Yorumunuz yayınlanmadan önce onaylanabilir.
                            </p>
                        </form>
                        }
                        else{
                            <p>Yorum için uygulamaya giriş yapmalısınız. <a href="/users/login">Login</a></p>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">

        <vc:tags-menu></vc:tags-menu>
        <vc:new-posts></vc:new-posts>

    </div>
</div>



@section Scripts{
<script src="https://code.jquery.com/jquery-3.7.1.min.js"
    integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous">
    </script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#commentSave").click(function (e) {
            $.ajax({
                type: "POST",
                url: '@Url.Action("AddComment", "Posts")',
                dataType: "json",
                data: {
                    PostId: $("#PostId").val(),
                    CommentText: $("#CommentText").val()
                },
                success: function (comment) {
                    var date = new Date(comment.publishedOn);
                    comment.publishedOn = date.toLocaleDateString();
                    $("#comments").append(`
                        <div class="my-4 d-flex">
                            <img src="/img/${comment.image}" alt="" class="avatar rounded-circle float-start me-3">
                            <div>
                                <div class="mb-2 d-flex">
                                    <h6 class="me-2">${comment.userName} </h6>
                                    <small>${comment.publishedOn}</small>
                                </div>
                                <p>${comment.commentText}</p>
                            </div>
                        </div>
                    `);
                    $("#UserName").val('');
                    $("#CommentText").val('');

                    var count = parseInt($("#commentCount").text());
                    count += 1;
                    $("#commentCount").text(count + " Adet yorum.");
                }
            });
            return false;
        });
    }); 
</script>
}